{
    "manifest_version": 3,
    "version": "1.0",
    "name": "Website tracker",
    "action": {
        "default_popup": "index.html",
        "default_icon": "icon.png"
    },
    "description": "Keep track of your website",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "permissions": [
        "tabs"
    ],
    "content_security_policy": {
        "extension_pages": "default-src 'self'; style-src 'self' 'unsafe-inline'"
    }
}